<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CMS</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <div class="navbar-header pull-left">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/Images/bg_Logo.jpg" alt="Site Logo" style="height:30px; width: 70px" />
                    </a>
                </div>
                <button type="button" class="navbar-toggle navbar-right" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", new { controller = "Home" }, new { @class = "myLinkClass" })</li>
                    <li class="nav-item">@Html.ActionLink("About Us", "About", new { controller = "Home" }, new { @class = "myLinkClass" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact Us", "Contact", new { controller = "Home" }, new { @class = "myLinkClass" })</li>
                    <li class="nav-item">@Html.ActionLink("Admin", "Login", new { controller = "Home" }, new { @class = "myLinkClass" })</li>
                </ul>
            </div>
        </div>
    </div>
    <p></p>
    <div class="container body-content">
        @RenderBody()
    </div>

    <div class="container">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CMS. All Rights Reserved </p>
        </footer>
    </div>
</body>
</html>